@model MSSA_Assignment_12._2.Models.AllBooksView

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*displaying property name*@
                @Html.DisplayNameFor(model=>model.Books.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Books.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Books.First().Author)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Books) {
        <tr>
                <td>@Html.DisplayFor(modelitem=>item.Id) </td>
                <td>@Html.DisplayFor(modelitem=>item.Name) </td>
                <td>@Html.DisplayFor(modelitem=>item.Author) </td>

            <td>
                    <a asp-action="Details" asp-controller="Book" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Edit" asp-controller="Book" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Book" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
